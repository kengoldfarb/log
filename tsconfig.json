{
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": [
			"es2017",
			"dom"
		],
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "Bundler",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"./*.ts",
		"./**/*.ts",
		"./*.js",
		"./**/*.js",
		"./.*.js"
	],
	"exclude": [
		"**/node_modules/*",
		"build/*"
	]
}